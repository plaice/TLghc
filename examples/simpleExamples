fun index2.d1.d2 = #d1 + #d2

fun prev.d(X)  = X [d <- #d - 1]
fun next.d(X)  = X [d <- #d + 1]

fun fby.d(X,Y) = if #d < 1 then X else prev.d(Y)
fun ybf.d(X,Y) = if #d > -1 then Y else next.d(X)

dim d  <- 0
dim d0 <- 0
dim d1 <- 0

var X = 0 fby.d X+1
var Y = Y-1 ybf.d 0

evalExpr X @ [d <- -2 .. 2]
evalExpr Y @ [d <- -2 .. 2]
evalExpr index2.d0.d1 @ [d0 <- 1 .. 3, d1 <- 2 .. 4]
